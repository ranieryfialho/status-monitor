generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id         String   @id @default(cuid())
  slug       String   @unique
  name       String
  accessCode String
  createdAt  DateTime @default(now())
  
  sites      Site[]
}

model Site {
  id        String   @id @default(cuid())
  slug      String
  name      String
  url       String
  apiToken  String
  
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([clientId, slug])
}

// ADMINS
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String   // Aqui guardaremos o Hash, n√£o a senha pura
  createdAt DateTime @default(now())
}